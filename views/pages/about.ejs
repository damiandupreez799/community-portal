<%- include('../partials/header') %>

<section class="about-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-content">
                    <h1 class="display-4 fw-bold mb-4">About Our Community</h1>
                    <p class="lead mb-4">We're dedicated to fostering connections, supporting local initiatives, and creating spaces where everyone can thrive.</p>
                    <p>Our community portal serves as a digital hub that brings together people, resources, and events to strenghten our collective bonds and create positive change.</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="" alt="Community gathering" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </div>
</section>
<section class="our-mission py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="mission-content">
                    <h2 class="display-6 fw-bold mb-4">Our Mission</h2>
                    <div class="header-underline mx-auto"></div>
                    <p class="lead">To build a thriving, inclusive community where everyone has access to resources, events, and connections that enrich their lives.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="team-section py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="display-6 fw-bold">Meet Our Team</h2>
            <div class="header-underline mx-auto"></div>
            <p class="text-muted">The dedicated people working behind the scenes</p>
        </div>
        <div class="row g-4">
            <% team.forEach(teamMembers => { %>
                <div class="col-md-4">
                    <div class="team-card text-center p-4 border rounded shadow-sm">
                        <h4 class="fw-bold"><%= teamMembers.name %></h4>
                            <p class="text-muted"><%= teamMembers.role %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<section class="values-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="display-6 fw-bold">Our Values</h2>
            <div class="header-underline mx-auto"></div>
            <p class="text-muted">The principles that guide our community</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="value-card">
                    <div class="icon-wrapper">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3>Inclusivity</h3>
                    <p>We believe in creating spaces wheere everyone feels welcome and valued, regardless of background or circumstance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-card">
                    <div class="icon-wrapper">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3>Collaboration</h3>
                    <p>By working together, we can achieve more and create meaningful impact in our community.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="value-card">
                    <div class="icon-wrapper">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3>Compassion</h3>
                    <p>We approach our work with empathy and understanding, recognizing the diverse needs of our community members.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>

